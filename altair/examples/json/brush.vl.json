{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "http://vega.github.io/vega-lite/data/cars.json"
    },
    "description": "Drag out a rectangular brush to highlight points.",
    "encoding": {
        "color": {
            "condition": {
                "field": "Cylinders",
                "selection": "brush",
                "type": "ordinal"
            },
            "value": "grey"
        },
        "x": {
            "field": "Horsepower",
            "type": "quantitative"
        },
        "y": {
            "field": "Miles_per_Gallon",
            "type": "quantitative"
        }
    },
    "mark": "point",
    "selection": {
        "brush": {
            "type": "interval"
        }
    }
}